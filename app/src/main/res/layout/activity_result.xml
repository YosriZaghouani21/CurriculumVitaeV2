<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Result">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_border"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "/>
        <TextView
            android:id="@+id/email_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email :"/>
        <TextView
            android:id="@+id/age_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age : "/>
        <TextView
            android:id="@+id/genre_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="genre :"/>
        <TextView
            android:id="@+id/ios_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ios skills : "/>
        <TextView
            android:id="@+id/flutter_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flutter skills : "/>
        <TextView
            android:id="@+id/android_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android skills : "/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>